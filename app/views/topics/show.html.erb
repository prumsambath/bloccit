<h1><%= @topic.name %></h1>

<% if policy(@topic).edit? %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<% end %>
<% if policy(@topic).destroy? %>
  <%= link_to "Delete Topic", @topic, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this topic?' }%>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %></p>

    <% @posts.each do |post| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to post.markdown_title, [@topic, post] %>
            <%= image_tag(post.image.url) if post.image? %>
          </h4>

          <%= render partial: 'posts/post_status', locals: { post: post } %>
          <%= post.comments.count %> Comments
        </div>
      </div>
    <% end %>

    <%= paginate @posts %>
  </div>
  <div class="col-md-4">
    <% if policy(Post.new).create? %>
      <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
